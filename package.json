{
  "name": "@mfields/tree",
  "version": "1.1.1",
  "description": "Create immutable tree instances.",
  "main": "./index.js",
  "scripts": {
    "build": "npm run bundle",
    "bundle": "NODE_ENV=production ./node_modules/.bin/rollup -c",
    "test": "NODE_ENV=test mocha && standard",
    "test:chrome": "karma start ./karma/chrome.js",
    "test:ie": "karma start ./karma/ie.js",
    "test:mac": "karma start ./karma/mac.js",
    "test:win": "karma start ./karma/win.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mfields/jsTree.git"
  },
  "keywords": [
    "tree"
  ],
  "author": "Michael Fields",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mfields/jsTree/issues"
  },
  "homepage": "https://github.com/mfields/jsTree#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "chai": "4.2.0",
    "core-js": "^3.6.5",
    "cz-conventional-changelog": "3.2.0",
    "karma": "^5.1.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "2.0.1",
    "karma-opera-launcher": "^1.0.0",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "8.1.1",
    "rollup": "^2.23.1",
    "rollup-plugin-terser": "^6.1.0",
    "standard": "14.3.4"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "standard": {
    "ignore": [
      "test/",
      "dist/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
